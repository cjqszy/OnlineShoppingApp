<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:layout_editor_absoluteY="25dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/small_size"
            android:paddingStart="@dimen/small_size">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_history_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_size"
                    android:gravity="center_vertical"
                    android:padding="@dimen/small_size"
                    android:text="todoid" />

                <TextView
                    android:id="@+id/tv_history_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_size"
                    android:gravity="center_vertical"
                    android:padding="@dimen/small_size"
                    android:text="todotime" />

                <TextView
                    android:id="@+id/tv_history_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_size"
                    android:padding="@dimen/small_size"
                    android:text="todoprice" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_history_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_size"
                    android:padding="@dimen/small_size"
                    android:text="name" />

                <TextView
                    android:id="@+id/tv_history_billingaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/small_size"
                    android:text="billingaddress" />

                <TextView
                    android:id="@+id/tv_history_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/small_size"
                    android:text="mobile" />


            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_tracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shipment tracking"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="143dp"
            android:layout_marginStart="@dimen/small_size"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textview_tracking_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="tracking_status"
            android:layout_weight="1"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/amazonColor"/>

</LinearLayout>