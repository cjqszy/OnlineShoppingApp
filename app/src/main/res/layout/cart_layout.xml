<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_productimage2"
            android:layout_width="150dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/amazon_icon" />
        <LinearLayout
            android:background="#eff2ef"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/textview_productname2"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="product name "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/textview_productprice2"
                android:paddingLeft="10dp"
                android:text="price : 0"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>
            <TextView
                android:id="@+id/textview_shippingdetail2"
                android:paddingLeft="10dp"
                android:text="shipping details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_quantity"
                    android:paddingLeft="10dp"
                    android:text="quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

<!--                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/quantity_array">
                </android.support.v7.widget.AppCompatSpinner>-->

<!--                <ImageButton
                    android:id="@+id/ib_cart_delete"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/ic_delete" />-->

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:background="@color/amazonColor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
